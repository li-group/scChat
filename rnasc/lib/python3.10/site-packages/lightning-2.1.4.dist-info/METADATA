Requires-Dist: pydantic >=1.7.4 ; extra == 'dev'
Requires-Dist: pympler ; extra == 'dev'
Requires-Dist: pytest-asyncio ==0.21.1 ; extra == 'dev'
Requires-Dist: pytest-cov ==4.1.0 ; extra == 'dev'
Requires-Dist: pytest-doctestplus ==1.0.0 ; extra == 'dev'
Requires-Dist: pytest-random-order ==1.1.0 ; extra == 'dev'
Requires-Dist: pytest-rerunfailures ==12.0 ; extra == 'dev'
Requires-Dist: pytest-timeout ==2.1.0 ; extra == 'dev'
Requires-Dist: pytest-xdist ==3.3.1 ; extra == 'dev'
Requires-Dist: pytest ==7.4.0 ; extra == 'dev'
